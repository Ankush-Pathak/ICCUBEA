<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    tools:context="iccubea.iccubea2017.com.iccubea.HowTooReach" android:layout_height="fill_parent" android:layout_width="fill_parent"
    android:orientation="vertical">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavView_Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:elevation="1dp"
        app:itemIconTint="@color/colorBackground"
        app:itemTextColor="@color/colorBackground"
        app:menu="@menu/bottom_navigation_main"
        android:background="@drawable/button"
        />
</LinearLayout>

